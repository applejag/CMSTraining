@model TeaserBlockViewModel

<div class="media span4">
    <div style="clear:both;">
        <div class="mediaText">
            <h2 @Html.EditAttributes(m => m.CurrentBlock.TeaserHeading)>
                @Html.DisplayFor(m => m.CurrentBlock.TeaserHeading)
            </h2>
            <p>
                @Html.PropertyFor(m => m.CurrentBlock.TeaserText)
            </p>
            <small>
                There has been @Model.TodayVisitorCount.ToString("N0") visitors today.
            </small>
        </div>
    </div>
</div>