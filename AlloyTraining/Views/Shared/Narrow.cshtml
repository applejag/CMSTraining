@model PageViewModel<SitePageData>

<div class="block span4" style="background-color: palegreen;">
    <div class="border">
        <a href="@Url.ContentUrl(Model.CurrentPage.ContentLink)">
            <h2 @Html.EditAttributes(m => m.CurrentPage.Name)>
                @Html.DisplayFor(m => m.CurrentPage.Name)
            </h2>
            <p class="introduction" @Html.EditAttributes(m => m.CurrentPage.MetaDescription)>
                @Html.DisplayFor(m => m.CurrentPage.MetaDescription)
            </p>
        </a>
    </div>
</div>